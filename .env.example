# SDLC AI Agents - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ============================================
# Service Ports
# ============================================
JIRA_WEBHOOK_API_PORT=8080
CONFIGURATION_API_PORT=8081
BACKOFFICE_UI_PORT=3000

# ============================================
# Claude Code API
# ============================================
# Get your session token from Claude Code
# Format: sk-xxxxxxxxxxxxx
CLAUDE_CODE_SESSION_TOKEN=your_claude_code_session_token_here

# ============================================
# Logging
# ============================================
# Options: debug, info, warn, error
LOG_LEVEL=info

# ============================================
# MongoDB (Internal - Do not change)
# ============================================
# These are automatically configured in docker-compose.yml
# MONGODB_URL=mongodb://mongodb:27017/sdlc_agents

# ============================================
# Optional: Test Configuration
# ============================================
# GitHub Personal Access Token for testing
# Required for functional tests
TEST_GITHUB_TOKEN=your_github_token_here

# Test API Key (optional, for securing test endpoints)
TEST_API_KEY=your_test_api_key_here
